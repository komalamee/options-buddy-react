# Interactive Brokers Connection
IBKR_HOST=127.0.0.1
IBKR_PORT=4001
# 4001 = IB Gateway Live
# 4002 = IB Gateway Paper
# 7497 = TWS Live
# 7496 = TWS Paper

# Market Data Type
# 1 = Live (requires market data subscription)
# 2 = Frozen (last available price when market closed)
# 3 = Delayed (15-20 min delay, free)
# 4 = Delayed Frozen
IBKR_MARKET_DATA_TYPE=2

# Database Path (optional - defaults to ./data_store/options_buddy.db)
# DB_PATH=/path/to/your/options_buddy.db

# AI API Keys (optional - for AI advisor functionality)
GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
